<%- include('partials/header.ejs'); %>

    <body>
        <%- include('partials/navbar.ejs'); %>
            <div class="container">
                <hr>
                <h1>
                    <%= ask.title %>
                </h1>
                <p>
                    <%= ask.description %>
                </p>
                <hr>
                <form method="POST" action="/torespond">
                    <h3>Responda</h3>
                    <label for="body">Resposta:</label>
                    <textarea name="body" id="body" rows="5" placeholder="Digite sua resposta"
                        class="form-control"></textarea><br>
                    <input type="hidden" name="idask" id="idask" value="<%= ask.id %>">
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form>
                <hr>
                <h3>Respostas</h3>
                <hr>
                <% responses.forEach(response=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <p>
                                <%= response.body %>
                            </p>
                        </div>
                    </div>
                    <% })%>

            </div>
    </body>

    <%- include('partials/footer.ejs'); %>